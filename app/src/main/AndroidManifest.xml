<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.renancsdev.sky">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sky_icon_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sky_icon_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sky"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.Apresentacao"
            android:theme="@style/Theme.Sky_NoStatusBar"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.DetalheFilmes"
            android:exported="false"
            android:theme="@style/Theme.NoStatusBar" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NoStatusBar">
        </activity>
    </application>

</manifest>